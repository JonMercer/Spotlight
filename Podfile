# Uncomment this line to define a global platform for your project
# platform :ios, '9.0'

target 'Spotlight' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
    # Google Maps
    source 'https://github.com/CocoaPods/Specs.git'
    pod 'GoogleMaps'
    # Firebase
    pod 'Firebase'
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    pod 'Firebase/Storage'
    pod 'Firebase/AdMob'

  # Pods for Spotlight

  target 'SpotlightTests' do
    inherit! :search_paths
    # Pods for testing
    # Google Maps
    source 'https://github.com/CocoaPods/Specs.git'
    pod 'GoogleMaps'
    # Firebase
    pod 'Firebase'
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    pod 'Firebase/Storage'
    pod 'Firebase/AdMob'
  end

  target 'SpotlightUITests' do
    inherit! :search_paths
    # Pods for testing
    # Google Maps
    source 'https://github.com/CocoaPods/Specs.git'
    pod 'GoogleMaps'
    # Firebase
    pod 'Firebase'
    pod 'Firebase/Core'
    pod 'Firebase/Database'
    pod 'Firebase/Auth'
    pod 'Firebase/Storage'
    pod 'Firebase/AdMob'
  end

end
